{
    "name": "sporther-server",
    "version": "1.0.0",
    "main": "index.js",
    "engines": {
        "node": "14.x"
    },
    "scripts": {
        "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
        "start": "npm run build && node -r dotenv/config dist/index.js",
        "restart": "rimraf dist && npm run build && npm run start",
        "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify -r dotenv/config src/index.ts",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "migrate": "yarn typeorm migration:run"
    },
    "repository": "https://github.com/Sporther/sporther-server.git",
    "author": "BrunoBudelRossi <bbrossi@inf.ufsm.br>",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^5.0.1",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.7.1",
        "ts-node": "^10.4.0",
        "typeorm": "^0.2.38",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.11.0",
        "tscpaths": "^0.0.9",
        "typescript": "^4.4.4",
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.12",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.13",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/node": "^16.11.6",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "dotenv": "^10.0.0"
    },
    "devDependencies": {
        "eslint": "^8.2.0",
        "prettier": "^2.4.1"
    }
}
